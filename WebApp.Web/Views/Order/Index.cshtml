    @model List<WebApp.DAL.Entities.Order>


    <h2>Заказы</h2>
    <a href="/Order/Create" class="btn btn-success mb-3">Добавить новый</a>

    <table class="table table-striped">
        <thead>
            <tr>
                <th>Пользователь</th>
                <th>Цена</th>
                <th>Дата</th>
                <th>Действия</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var order in Model)
            {
            <tr>
                <td>@order.User.FullName</td>
                <td>@order.Price.ToString("C")</td>
                <td>@order.Date.ToShortDateString()</td>
                <td>
                    <a href="/Order/Edit/@order.Id" class="btn btn-primary btn-sm">Редактировать</a>
                    <a href="/Order/Delete/@order.Id" class="btn btn-danger btn-sm">Удалить</a>
                </td>
            </tr>
            }
        </tbody>
    </table>