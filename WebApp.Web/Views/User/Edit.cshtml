@model WebApp.DAL.Entities.User

<h2>Редактировать пользователя</h2>
<form method="post" action="/User/Save">
    <input type="hidden" name="Id" value="@Model.Id" />
    <div class="mb-3">
        <label class="form-label">ФИО</label>
        <input type="text" name="FullName" class="form-control" value="@Model.FullName" required />
    </div>
    <div class="mb-3">
        <label class="form-label">Дата рождения</label>
        <input type="date" name="BirthDate" class="form-control" value="@Model.BirthDate.ToString(" yyyy-MM-dd")" required />
    </div>
    <button type="submit" class="btn btn-success">Сохранить</button>
    <a href="/User/Index" class="btn btn-secondary">Отмена</a>
</form>